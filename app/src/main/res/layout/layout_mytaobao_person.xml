<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="65dp"
        android:layout_height="66dp"
        android:src="@drawable/bar_around_rightavatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <TextView
        android:id="@+id/main_taobao_textView"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:text="Your Name"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286" />

    <TextView
        android:id="@+id/main_taobao_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击这里可以添加个性签名."
        app:layout_constraintBottom_toBottomOf="@+id/main_taobao_person_friend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_taobao_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_taobao_textView3"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView"
        app:layout_constraintStart_toStartOf="@+id/main_taobao_textView2"
        app:layout_constraintTop_toBottomOf="@+id/main_taobao_textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_taobao_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注"
        app:layout_constraintBottom_toBottomOf="@+id/main_taobao_textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_taobao_textView3"
        app:layout_constraintTop_toBottomOf="@+id/main_taobao_textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_taobao_textView4"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toEndOf="@+id/main_taobao_textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <TextView
        android:id="@+id/main_taobao_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        app:layout_constraintBottom_toBottomOf="@+id/main_taobao_textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_taobao_textView4"
        app:layout_constraintTop_toTopOf="@+id/main_taobao_textView4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="11dp"
        android:layout_height="12dp"
        android:background="@drawable/main_taobao_person_right"
        app:layout_constraintBottom_toBottomOf="@+id/main_taobao_textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/main_taobao_textView2"
        app:layout_constraintTop_toTopOf="@+id/main_taobao_textView2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_taobao_person_friend"
        android:layout_width="188dp"
        android:layout_height="39dp"

        android:background="@drawable/uik_taobao_taoyouquan2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

</androidx.constraintlayout.widget.ConstraintLayout>