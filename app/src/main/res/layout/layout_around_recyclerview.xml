<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="315dp">

    <ImageView
        android:id="@+id/main_around_image1"
        android:layout_width="180dp"
        android:layout_height="218dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_around_message"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_around_image1"
        app:layout_constraintVertical_bias="0.0"
        tools:text="背心衬衫叠穿是初秋答案吧 最简却最优~ 秒增加层" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_around_circleImage"
        android:layout_width="21dp"
        android:layout_height="23dp"
        app:layout_constraintEnd_toEndOf="@+id/main_around_message"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_around_message"
        app:layout_constraintTop_toBottomOf="@+id/main_around_message"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_around_name"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:gravity="center|start"
        android:textSize="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/main_around_circleImage"
        app:layout_constraintTop_toBottomOf="@+id/main_around_message"
        app:layout_constraintVertical_bias="0.0"
        tools:text="一丸木有" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="11dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_around_name"
        app:srcCompat="@drawable/main_around_heart" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="31dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:text="666"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView28"
        app:layout_constraintTop_toTopOf="@+id/imageView28"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>